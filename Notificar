import java.awt.Color;

import java.awt.Font;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.JPanel;

public class Notificar {
	Notificar(){}
	
	public boolean solicitaInput() {
		String rn = JOptionPane.showInputDialog(null,"Digite o numero de cadastro","N° Cod.",3);
		if(rn == null || rn.isEmpty()) {
			return false;
		}
		else if(rn.isBlank() || rn.length() != 5 ) {
			this.falhaBuscaCod();
			return false;
		}
		return true;
	}
	
	public void notAgendamento() {
		JOptionPane.showMessageDialog(null, "A consulta e o exame foram agendados.");
	}
	
	public void notFalhaAgendamento() {
		JOptionPane.showMessageDialog(null, "Houve uma falha no agendamento, tente novamente");
	}
	
	public void falhaBuscaCod() {
		JOptionPane.showMessageDialog(null, "Esse código não se encontra em nosso sistema, tente novamente");
	}
	public void notCadastro() {
		JOptionPane.showMessageDialog(null, "O paciente foi cadastrado com sucesso");
	}
	public void notEditado() {
		JOptionPane.showMessageDialog(null, "O cadastro foi editado com sucesso");
	}
	public void notCancelamento() {
		JOptionPane.showMessageDialog(null, "O cadastro foi excluido com sucesso");
	}
}
